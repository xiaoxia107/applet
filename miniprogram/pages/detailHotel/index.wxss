/* pages/addHotel/index.wxss */
.page-section{
  border-bottom: 1rpx solid #dddddd;
  margin-bottom: 40rpx;
}
.addbtn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center; 
  border: 1px solid #07c160;
  border-radius: 8rpx;
  color: #07c160;
}
.resetbtn{
  width: 100%;
  height: 80rpx;
  text-align: center; 
  border: 1px solid #aaa;
  border-radius: 8rpx;
  color: #aaa;
}
.room{
  border: 1px solid #ddd;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.room-del{
  position: absolute;
  right: 20rpx;
  top: 0;
  font-size: 40rpx;
  color: #aaa;
}
.roomType{
  margin: 30rpx 0;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #dddddd; 
  display: flex;
}
.roomType-label{
  margin-right: 20rpx;
}